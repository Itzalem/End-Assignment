<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.endassigment.controllers.GameController">
   <VBox fx:id="nameBox" alignment="CENTER" layoutX="198.0" layoutY="89.0" prefHeight="221.0" prefWidth="181.0" spacing="10.0">
       <Label layoutX="10.0" layoutY="100.0" text="Enter your name" />
       <TextField fx:id="playerName" layoutX="10.0" />
       <Button layoutX="10.0" mnemonicParsing="false" onAction="#onNameEntered" text="Start Quizz" />
       <opaqueInsets>
           <Insets />
       </opaqueInsets>
   </VBox>
   <Pane fx:id="questionBox" layoutX="92.0" layoutY="22.0" visible="false">
      <children>
      
         <VBox alignment="CENTER_LEFT" layoutY="30.0" prefHeight="83.0" prefWidth="426.0" spacing="15.0">
             <Label fx:id="labelScore" text="Score" />
            <Label fx:id="labelTimer" text="Time" />
             <Label fx:id="labelTitle" text="Title" />
         </VBox>
      
         <VBox fx:id="answersBox" layoutY="114.0" prefHeight="187.0" prefWidth="426.0" />
          <Button fx:id="buttonNext" layoutX="154.0" layoutY="314.0" mnemonicParsing="false" onAction="#onNextClicked" text="Next Question" />
         <Label layoutX="148.0" text="Name of the quizz" />
      </children>
   </Pane>

</AnchorPane>
